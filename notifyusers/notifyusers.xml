    <namespace path="src">Joomla\Plugin\Content\Notifyusers</namespace>
    <files>
        <folder plugin="notifyusers">services</folder>
        <folder>src</folder>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/plg_content_notifyusers.ini</language>
