    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="usergroups"
                    type="UserGroupList"
                    label="PLG_CONTENT_NOTIFYUSERS_FIELD_USERGROUP_LABEL"
                    description="PLG_CONTENT_NOTIFYUSERS_FIELD_USERGROUP_LABELDESC"
                    layout="joomla.form.field.list-fancy-select"
                    multiple="true"
                    checksuperusergroup="0"
                    default="2"
                />
                <field
                    name="subject"
                    type="text"
                    label="PLG_CONTENT_NOTIFYUSERS_FIELD_SUBJECT_LABEL"
                    description="PLG_CONTENT_NOTIFYUSERS_FIELD_SUBJECT_DESC"
